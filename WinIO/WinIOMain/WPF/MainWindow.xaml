    </Window.Resources>

    <Grid x:Name="MainGrid" Background="#37A0A0A0" fw:PointerTracker.Enabled="True">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="GridRow0" Height="Auto"/>
            <RowDefinition x:Name="GridRow1" Height="*"/>
            <RowDefinition x:Name="GridRow2" Height="5"/>
            <RowDefinition x:Name="GridRow3" Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="GridCol0" Width="30*"></ColumnDefinition>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="40*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="40*" />
        </Grid.ColumnDefinitions>

        <Menu x:Name="MainMenu" Grid.Row="0" Grid.ColumnSpan="{Binding Path=ColumnDefinitions.Count, ElementName=MainGrid}"
              Background="#13474747" FontSize="13" Foreground="White">

        </Menu>
        <local:IOTabControl Grid.Row="1" x:Name="TabControl0"/>
        <GridSplitter Grid.Row="1" x:Name="Splitter0" Grid.Column="1"  Grid.RowSpan="3" Width="5" HorizontalAlignment="Stretch" Background="{StaticResource splitter}"/>
        <local:IOTabControl Grid.Row="1" Grid.Column="2" x:Name="TabControl1"/>
        <GridSplitter Grid.Row="1" x:Name="Splitter1" Grid.Column="3" Grid.RowSpan="3" Width="5" HorizontalAlignment="Stretch" Background="{StaticResource splitter}"/>
        <local:IOTabControl Grid.Row="1" Grid.Column="4" x:Name="TabControl2"/>
        <local:IOTabControl Grid.Row="3" Grid.Column="0" x:Name="TabControl3"/>
        <local:IOTabControl Grid.Row="3" Grid.Column="2" x:Name="TabControl4"/>
        <local:IOTabControl Grid.Row="3" Grid.Column="4" x:Name="TabControl5"/>
        <GridSplitter Grid.Row="2" Grid.Column="0" Height="5" Grid.ColumnSpan="5" HorizontalAlignment="Stretch" Background="{StaticResource splitter}"/>

    </Grid>
